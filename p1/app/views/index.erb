<div class="container">
  <h1>Welcome to Sinatra!</h1>
  <p>Hello, <%= em("world!") %></p>
  <p>Title passed: <%= @title %></p>
  <p>Content passed: <%= @content %></p>
  <table>
    <tr>
      <th>File Description</th>
      <th>File Location</th>
    </tr>
    <tr>
      <td>This view file</td>
      <td><code><%= __FILE__.gsub(Sinatra::Application.root, '') %></code></td>
    </tr>
    <tr>
      <td>The layout file</td>
      <td><code><%= File.expand_path('../layout.erb', __FILE__).gsub(Sinatra::Application.root, '') %></code></td>
    </tr>
    <tr>
      <td>The current controller</td>
      <td><code><%= File.expand_path('../../controllers/index.rb', __FILE__).gsub(Sinatra::Application.root, '') %></code></td>
    </tr>
  </table>
</div>

<form name="input" action="/new" method="post">
  Note Title:
  <input type="text" name="note_title">
  <br>
  Note Content:
  <input type="text" name="note_content">
  <br>
  <input type="submit" value="Submit">
</form>

<h3>Notes</h3>
<ol>

  <% @notes.each do |note| %>
  <div class="note">
    <%= "Title: " + note.title.to_s %><br>
    <%= "Note: " + note.content.to_s %><br>
    <form action="/edit/<%= note.id %>" method="get">
      <input action="/edit" type="submit" value="Edit">
    </form>
    <input type="submit" value="Delete">
    <br><br>
  </div>
  <% end %>
</ol>
